{{ define "settings" -}}
    {{template "head" . -}}
    <div class="tabs">
	{{- $data := .Data -}}
	{{- $tabs := list "ui" -}}

	{{- $tabNameMap := dict "account" "Account" "ui" "UI" -}}
	{{- if .LoginedUser -}}
	    {{- $tabs = list "account" "ui" -}}
	{{- end -}}
	{{- range $tabs -}}
	    <a class="tab{{if eq $data.PageKey .}} active{{end}}" href="/settings/{{.}}">{{get $tabNameMap .}}</a>
	{{- end -}}
    </div>

    {{- if and .Data.AccountData (eq .Data.PageKey "account") -}}
	<form class="form" method="POST" action="/settings/account">
	    {{.CSRFField}}
	    <div class="form__row">
		<label class="form__label" for="name">Username:</label>
		<div id="name">{{.Data.AccountData.Name}}</div>
	    </div>
	    <div class="form__row">
		<label class="form__label" for="introduction">Introduction:</label>
		<textarea {{if not (permit "user" "update_intro_mine")}}disabled{{end}}  id="introduction" style="width:100%;box-sizing:border-box;" name="introduction" rows="10">{{.Data.AccountData.Introduction}}</textarea>
	    </div>
	    <br/>
	    <button {{if not (permit "user" "update_intro_mine")}}disabled{{end}} type="submit">Save</button>
	</form>
    {{- end -}}

    {{- if eq .Data.PageKey "ui" -}}
	<form class="form" method="POST" action="/settings/ui">
	    {{- $themeDict := dict "light" "Light" "dark" "Dark" "system" "OS Default"}}
	    {{- $themes := list "light" "dark" "system"}}
	    {{- $contentLayoutDict := dict "full" "Full" "centered" "Centered"}}
	    {{- $contentLayouts := list "centered" "full"}}
	    {{- $settings := .UISettings}}
	    {{- .CSRFField}}
	    <div class="form__row">
		<label class="form__label" for="lang">Language:</label>
		<select id="lang" name="lang">
		    {{- range .Data.LanguageOptions -}}
			<option {{if eq $settings.Lang .Value}}selected{{end}} value="{{.Value}}">{{.Name}}</option>
		    {{- end -}}
		</select>
	    </div>
	    <div class="form__row">
		<label class="form__label" for="theme-options">Theme:</label>
		<div id="theme-options">
		    {{range $themes -}}
			<span><label><input name="theme" required autocomplete="off" id="{{.}}" {{if and $settings (eq $settings.Theme .)}}checked{{end}} type="radio" value="{{.}}"/> {{get $themeDict .}} {{if eq . "system"}}<span class="noscript-inline"><noscript>(Must enable JavaScript)</noscript></span>{{end}}</label></span>&nbsp;&nbsp;
		    {{- end -}}
		</div>
	    </div>
	    <div class="form__row">
		<label class="form__label" for="content-layout-options">Page Layout:</label>
		<div id="content-layout-options">
		    {{range $contentLayouts -}}
			<span><label><input name="content_layout" required autocomplete="off" id="{{.}}" {{if and $settings (eq $settings.ContentLayout .)}}checked{{end}} type="radio" value="{{.}}"/> {{get $contentLayoutDict .}}</label></span>&nbsp;&nbsp;
		    {{- end -}}
		</div>
	    </div>
	    <br/>
	    <button type="submit">Save</button>
	</form>
    {{- end -}}

    {{template "foot" . -}}
{{end}}
