{{define "register" -}}

    {{template "head" . -}}

    <form method="post" action="/register">
	{{.CSRFField -}}
	<table>
	    <tbody>
		<tr>
		    <td><label for="email">Email:</label></td>
		    <td><input required name="email" id="email" type="email"/> (Required)</td>
		</tr>
		<tr>
		    <td><label for="password">Password:</label></td>
		    <td><input required name="password" id="password" type="password" /> (Required)</td>
		</tr>
		<tr>
		    <td><label for="username">Name:</label></td>
		    <td><input name="username" id="username" type="text"/> (Optional)</td>
		</tr>
	    </tbody>
	</table>
	<br/>
	<div>
	    Already have an account? Please <a href="/login">log in</a> directly.
	</div>
	<br/>
	<button type="submit">Submit</button>
    </form>

    {{template "foot" . -}}
{{end -}}
