{{define "register" -}}

    {{template "head" . -}}

    <form class="form" method="post" action="/register">
	{{.CSRFField -}}
	<div class="form__row">
	    <label class="form__label" for="email">{{local "Email"}}:</label>
	    <input required name="email" id="email" type="email"/>
	</div>
	<div class="form__row">
	    <label class="form__label" for="password">{{local "Password"}}:</label>
	    <input required name="password" id="password" type="password" />
	    <br/>
	    <small class="text-lighten-2">{{local "PasswordFormatTip" "LeastLen" 8}}</small>
	</div>
	<div class="form__row">
	    <label class="form__label" for="username">{{local "Username"}}:</label>
	    <input name="username" id="username" type="text"/>
	    <br/>
	    <small class="text-lighten-2">{{local "UsernameFormatTip"}}</small>
	</div>
	<br/>
	<div>
	    {{- $loginLink :=  print "<a href=\"/login\">" (local "Login" | lower) "</a>" -}}
	    {{local "LoginTip" "LoginLink" $loginLink}}
	</div>
	<br/>
	<button type="submit">{{local "BtnSubmit"}}</button>
    </form>

    {{template "foot" . -}}
{{end -}}
